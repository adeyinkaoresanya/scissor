<%- include("../public/partials/nav") %> 
<%- include("../public/partials/header") %>

<div class="container mt-5 py-5">
    
    <h3>Your Urls!</h3>
    
    <% ownerUrl.forEach(url => { %>

    <div class="card mt-3">
        <div class="card-body">
            <p class="text-muted">created at: <%=url.date %> </p>
            <p class="text-muted"><%= url.origUrl %> Original url </p>        
            <h5 class="card-title"><%=url.shortUrl %> Short Url</h5>
            <p class="card-text"><%= url.clicks %> clicks</p>
            <p class="card-text"><%= blog.content.slice(0, 99) %> .... <a href="/blog/<%= blog._id %>">Read More</a></p>
            <!-- <a href=" /blog/<%= blog._id %>" class="btn btn-primary">Read More...</a>
            <a href=" /edit/<%= blog._id %>" class="btn btn-warning">Edit</a>
            <a href=" /delete/<%= blog._id %>" class="btn btn-danger">Delete</a> -->
            
        </div>
    </div>
    <%}) %>


</div>

<nav aria-label="Page navigation example">
    <ul class="pagination">
        <% for (let num = 1; num <= pages; num++) { %>
      <li class="page-item"><a class="page-link" href="?page=<%= num; %>">
        <%= num; %></a></li><% } %>
    </ul>
  </nav>

<%- include("../public/partials/footer") %>